@model HRpest.BL.Model.JobApplication

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row page-box">
    <div class="col-sm-8">
        <h1><b>Application details</b></h1>
        <br /><br />
    </div>
</div>
<div class="row page-box">
    <div class="col-sm-8">

            <h3><b>Additional information</b></h3>
            <div class="offer-description" id="previewMarkdown" style="word-wrap: break-word">
                @Model.AdditionalInformation
            </div>
            <br /> <br />
    </div>
    <div class="col-sm-4">
        <div class="offer-details">
            <div>
                <label><b>Applicant:</b></label>
                <span>@Model.Applicant.FullName</span>
            </div>
            <div>
                <label><b>Position:</b></label>
                <span>@Model.JobOffer.PositionName</span>
            </div>
            <div>
                <label><b>Company:</b></label>
                <span>@Model.JobOffer.CreatedFor.Name</span>
            </div>
            <div>
                <label><b>Location:</b></label>
                <span>@Model.JobOffer.Location</span>
            </div>
            <div>
                <label><b>Status:</b></label>
                <span>@EnumHelper.GetDisplayName(Model.ApplicationStatus)</span>
            </div>
            <div>
                <span>
                    <div class="col-sm-8 text-right py-2">
                        <a href="@Model.CvHandle">
                            <button class="btn btn-rounded btn-outline-primary"
                                    data-toggle="modal">
                                <i class="fa fa-download pr-3"></i>
                                Download CV
                            </button>
                        </a>
                    </div>
                </span>
            </div>

            <br />
            <br />
            <div>
                <label><b>Created:</b></label>
                <span>@Model.CreatedOn </span>
            </div>
            <div>
                <label><b>Edited:</b></label>
                <span>@Model.EditedOn </span>
            </div>
            <div>
                <br />
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                <button class="btn btn-rounded btn-danger mx-2"
                        data-toggle="modal"
                        data-target="#confirm-delete">
                    <i class="fas fa-trash-alt pr-2"></i>
                    Delete
                </button>
            </div>
        </div>
    </div>
    @Html.ActionLink("Go back to Job Offers", "Index", "JobOffer", null, new { @class = "btn btn-primary" })
</div>


<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Delete Employee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                <p class="font-weight-bold mb-0">Are you sure you want to delete this?</p>
                <p class="text-danger mb-0"><small>This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-rounded" data-dismiss="modal">
                    <i class="fas fa-chevron-left pr-2"></i>
                    Cancel
                </button>
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
</div>
